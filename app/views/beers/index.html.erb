<center>

<h1> ALL THE BEERS </h1>

<table>
  <tr>
    <th><%= sortable "name"%></th>
    <th><%= sortable "brewer"%></th>
    <th><%= sortable "price"%></th>
    <th><%= sortable "ounce"%></th>
    <th><%= sortable "calorie"%></th>
    <th><%= sortable "rating"%></th>
  </tr>

  <% @beers.each do |beer| %>
    <tr>
      <td><%= beer.name %></td>
      <td><%= beer.brewer %></td>
      <td><%= beer.price %></td>
      <td><%= beer.ounce %></td>
      <td><%= beer.calorie %></td>
      <td><%= beer.rating %></td>
      <td><%= link_to 'Show', beer_path(beer) %></td>
      <td><%= link_to 'Edit', edit_beer_path(beer) %></td>
      <td><%= link_to 'Destroy', beer_path(beer),
              method: :delete,
              data: { confirm: 'OK, well, just be careful.' } %></td>
    </tr>
  <% end %>
</table>

<br>
<%= link_to "HOME", root_path %>    |    <%= link_to 'GOT A NEW BEER?', new_beer_path %>
<br>
<%= link_to "BACK", root_path %>

</center>
