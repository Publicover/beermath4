<center>

<h1> ALL THE BEERS </h1>

<table>
  <tr>
    <th>Name</th>
    <th>Brewer</th>
    <th>Price</th>
    <th>Ounces</th>
    <th>Calories</th>
    <th>Rating</th>
    <th>Cal per Ounce</th>
    <th>Ounce per Dollar</th>
  </tr>

  <% @beers.each do |beer| %>
    <tr>
      <td><%= beer.name %></td>
      <td><%= beer.brewer %></td>
      <td><%= beer.price %></td>
      <td><%= beer.ounce %></td>
      <td><%= beer.calorie %></td>
      <td><%= beer.rating %></td>
      <td><%= beer.calorie / beer.ounce %></td>
      <td><%= (beer.ounce / (beer.price / 6.0)).round(5) %></td>
      <td><%= link_to 'Show', beer_path(beer) %></td>
      <td><%= link_to 'Edit', edit_beer_path(beer) %></td>
      <td><%= link_to 'Destroy', beer_path(beer),
              method: :delete,
              data: { confirm: 'OK, well, just be careful.' } %></td>
    </tr>
  <% end %>
</table>

<br>
<%= link_to "HOME", root_path %>    |    <%= link_to 'GOT A NEW BEER?', new_beer_path %>
<br>
<%= link_to "BACK", root_path %>

</center>
